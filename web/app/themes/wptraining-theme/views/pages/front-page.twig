{% extends "base.twig" %}

{% block content %}
	<main>
		<section class="front-section">
			<div class="front-section__title">
				<h2 class="front-section__title__main">Les produits</h2>
				<p class="front-section__title__tagline">Coups de c≈ìurs</p>
			</div>
			<div class="front-section__content">
				<div class="products">
					{% for product in products %}
						<article class="product">
							<a href="{{product.link}}">
								<div class="product__heading">
									<h3 class="product__heading__title">{{product.title}}</h3>
									<span class="product__heading__brand">{{get_term(product.meta('marque'))}}</span>
								</div>
								<img src="{{product.thumbnail.src}}" alt="{{product.title}}" class="product__thumbnail">
							</a>
						</article>
					{% endfor %}
				</div>
			</div>
		</section>
	</main>

{% endblock %}
